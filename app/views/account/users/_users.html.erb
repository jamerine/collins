<table class="table">
  <thead>
    <tr>
      <th>User Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>User Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.find_each do |user| %>
    <tr>
      <th scope="row"> <%= user.id %> </th>
      <td> <%= user.first_name %></td>
      <td> <%= user.last_name %></td>
      <td> <%= user.email %></td>
      <td>
        <% if user.admin? %>
          Admin
        <% else %>
          General
        <% end %>
      </td>
      <td>
        <% if user == current_user %>
          <%= link_to 'edit', edit_account_user_path(user.id), class: 'btn btn-sm btn-secondary' %>
        <% end %>
        <% if current_user.admin? %>
          <%= link_to 'Delete', account_user_path(user), method: :delete, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
