<div class="container">
  <div class='col-md-4'>
    <h2>Create a new account</h2>
    <%= form_for(@account) do |account| %>
      <div class="form-group">
        <%= account.label :business_name %><br />
        <%= account.text_field :business_name, autofocus: true, class: 'form-control' %>
      </div>
      <%= account.fields_for :user do |user| %>
        <div class="form-group">
          <%= user.label :first_name %><br />
          <%= user.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= user.label :last_name %><br />
          <%= user.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= user.label :email %><br />
          <%= user.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= user.label :password %><br />
          <%= user.password_field :password, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= user.label :password_confirmation %><br />
          <%= user.password_field :password_confirmation, autofocus: true, class: 'form-control' %>
        </div>
      <% end %>
      <div class="actions">
        <%= account.submit "Create Account", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>

</div>
